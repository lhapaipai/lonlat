{
  "version": 8,
  "name": "ADMIN_EXPRESS",
  "glyphs": "https://data.geopf.fr/annexes/ressources/vectorTiles/fonts/{fontstack}/{range}.pbf",
  "sources": {
    "adminexpress": {
      "minzoom": 9,
      "type": "vector",
      "tiles": ["https://data.geopf.fr/tms/1.0.0/ADMIN_EXPRESS/{z}/{x}/{y}.pbf"]
